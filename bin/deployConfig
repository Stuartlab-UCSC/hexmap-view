#!/bin/bash
# Deploy the scripts and config, but not www.
# The env vars HEXMAP and HEX_VIEWER_CONFIG must be defined before calling this.

$HEXMAP/bin/checkConfig.sh
if [ "$?" == 1 ]; then
    exit 1
fi
source $HEX_VIEWER_CONFIG

if [ "$HEXMAP" == "/data" ]; then
    echo "sorry, cannot deploy from a deployed build"
    exit 1
fi

cd $HEXMAP

tar cf config.tar bin config
scp config.tar kolossus:dev
