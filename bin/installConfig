#!/bin/bash
# Reinstall the config and bin.
# The env vars HEXMAP and HEX_VIEWER_CONFIG must be defined before calling this.

$HEXMAP/bin/checkConfig.sh
if [ "$?" == 1 ]; then
    exit 1
fi
source $HEX_VIEWER_CONFIG

if [ "$HEX_VIEWER_CONFIG" == "/Users/swat/dev/hexagram/config/local.swat" ]; then
    echo "sorry, cannot install into your local dev environment"
    exit 1
fi

#source $HEX_VIEWER_CONFIG

cd $HEXMAP
rm -rf bin config
tar -xf /cluster/home/swat/dev/config.tar
