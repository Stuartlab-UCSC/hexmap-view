
# $1 is optional and may be <something>_test.js for a single test file to run
# or omitted to run all tests.

RUN=$1
if [ -z "$RUN" ]; then
    RUN=all
fi
echo
echo 
echo

if [ $RUN == 'all' ]; then
    for f in $HEXMAP/tests/selenium/test/*_test.js
        do
        node $f
    done
else
    node $1
fi
